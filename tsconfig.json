{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "rootDir": ".",
    "paths": {
      "@actions/*": ["./src/actions/*"],
      "@queries/*": ["./src/queries/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  }
}
